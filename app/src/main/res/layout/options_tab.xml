<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:padding="15dp">
    <TextView
        android:id="@+id/select_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_network"
        android:padding="4dp"/>
    <Spinner
        android:id="@+id/pick_network"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/select_network"/>
    </RelativeLayout>
    <Button
        android:id="@+id/sync_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sync_sms"/>
    <Button
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback"/>
    <Button
        android:id="@+id/about_renewdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_renewdata" />
</LinearLayout>