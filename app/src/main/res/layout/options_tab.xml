<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/select_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/select_network" />

        <Spinner
            android:id="@+id/pick_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/select_network"
            android:padding="4dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/sync_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sync_sms" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback" />

    <Button
        android:id="@+id/about_renewdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_renewdata" />
</LinearLayout>